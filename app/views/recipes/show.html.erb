<div class="container">
<div id="recipe-title">
  <h1>
    <%= @recipe.title %>
  </h1>
</div>

<div id="recipe-description">
  <p>
  <%= @recipe.description %>
  </p>
</div>

<div id="recipe-image">
  <p>
  <%= image_tag @recipe.image, width: "50%", heigth: "50%" %>
  </p>
</div>

<div id="recipe-ingredients">
  <p>
    <% @recipe.recipe_ingredients.each do |ri| %>
    <ul>
      <li><%= ri.ingredient.name %>: <%= ri.quantity %> <%= ri.unity %></li>
    </ul>
    <% end %>
  </p>
</div>

<div id="recipe-instruction">
  <p>
    <%= @recipe.instruction %>
  </p>
</div>


<br><br>
<%= link_to "Modifier la recette", edit_recipe_path %>
<br><br>
<%= link_to "Supprimer la recette",
  recipe_path(@recipe),
  data: {turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r.e ?"}
%>
<br><br>
<%= link_to "< Voir d'autres recettes", recipes_path %>
</div>



